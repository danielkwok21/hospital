<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Add new patient</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="container mt-4">
          <form id="addPatientForm">
            <div class="card my-3">
              <div class="card-header">
                Personal
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="form-group input-group-sm col-md-6">
                    <label for="firstName">First Name</label>
                    <input type="text" class="form-control" id="firstName" placeholder="Enter first name" required>
                  </div>
                  <div class="form-group input-group-sm col-md-6">
                    <label for="lastName">Last Name</label>
                    <input type="text" class="form-control" id="lastName" placeholder="Enter last name" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="form-group input-group-sm col-md-6">
                    <label for="dateOfBirth">Date of Birth</label>
                    <input type="date" class="form-control" id="dateOfBirth" required>
                  </div>
                  <div class="form-group input-group-sm col-md-6">
                    <label for="gender">Gender</label>
                    <select class="form-control" id="gender" required>
                      <option value="Male">Male</option>
                      <option value="Female">Female</option>
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="form-group input-group-sm">
                    <label for="address">Address</label>
                    <textarea type="text" class="form-control" id="address" placeholder="Enter address"
                      required></textarea>
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="form-group input-group-sm col-md-6">
                    <label for="phoneNumber">Phone Number</label>
                    <input type="tel" class="form-control" id="phoneNumber" placeholder="Enter phone number" required>
                  </div>
                  <div class="form-group input-group-sm col-md-6">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter email" required>
                  </div>
                </div>
              </div>
            </div>

            <div class="card my-3">
              <div class="card-header">
                Medical
              </div>
              <div class="card-body">
                <div class="row mb-3">
                  <div class="form-group input-group-sm col-md-6">
                    <label for="admissionDate">Admission Date</label>
                    <input type="datetime-local" class="form-control" id="admissionDate" required>
                  </div>
                  <div class="form-group input-group-sm col-md-6">
                    <label for="dischargeDate">Discharge Date</label>
                    <input type="datetime-local" class="form-control" id="dischargeDate">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="form-group input-group-sm col-md-6">
                    <label for="bedNumber">Bed Number</label>
                    <input type="text" class="form-control" id="bedNumber">
                  </div>
                  <div class="form-group input-group-sm col-md-6">
                    <label for="ward">Ward</label>
                    <input type="text" class="form-control" id="ward">
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="form-group input-group-sm">
                    <label for="diagnosis">Diagnosis</label>
                    <textarea class="form-control" id="diagnosis" rows="3"></textarea>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" form="addPatientForm">Submit</button>
      </div>
    </div>
  </div>
</div>
